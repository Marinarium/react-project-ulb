{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "ts-node": { //for webpack on ts
    "compilerOptions": {
      "module": "CommonJS",
      "strictNullChecks": false
    }
  },
  "include": [
    "config/jest/*.ts",
    "config/jest/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}